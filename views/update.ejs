<% include ./partials/header.ejs %>
<style>
    .flex{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .circleImg{
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
    }
    .circleImg img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .flex small{
        color: rgb(75, 195, 250);
        text-transform: capitalize;
        cursor: pointer;
    }
</style>


<div class="pt-5 mt-4 container">
    <div class="flex mt-3 mb-3 container">
        <div class="circleImg">
            <img src="" alt="">
        </div>
        <h5 class="mt-3"><%= Userfound.username %></h5>
   
    
        <form class="d" method="POST" action="/uploadpic" enctype="multipart/form-data">
            <input type="file" name="prfl" >
            <input type="submit" value="Update Profile Pic" class="btn btn-success btn-sm">
        </form>            
    </div>
    <form id="regForm" method="POST" action="/update">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputname">Name</label>
                <input type="text" name="username" class="form-control" id="inputname" placeholder="Username" value="<%= Userfound.username %>" >
            </div>
            <div class="form-group col-md-6">
                <label for="inputusername">City</label>
                <input type="text" name="city" class="form-control" id="inputusername" placeholder="City" value="<%= Userfound.city %>" >
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Something About You ðŸŽ­</label>
            <textarea name="about" class="form-control" id="exampleFormControlTextarea1" rows="3"
                placeholder="What you're good at, ambitions, about you...">
                <%= Userfound.about%>
            </textarea>
        </div>
        
        <button type="submit" class="btn btn-warning">Update Details</button>
    </form>
</div>



<% include ./partials/footer.ejs %>
